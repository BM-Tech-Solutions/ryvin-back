# Database
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ryvin
POSTGRES_PORT=5432

# Security
SECRET_KEY=supersecretkey
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days
REFRESH_TOKEN_EXPIRE_MINUTES=43200  # 30 days

# API
API_V1_STR=/api/v1
PROJECT_NAME=Ryvin Dating API
VERSION=0.1.0

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# SMS Service
SMS_PROVIDER_API_KEY=
SMS_VERIFICATION_TEMPLATE=Your Ryvin verification code is: {code}

# Storage
STORAGE_BACKEND=local
STORAGE_DIR=media

# Firebase Authentication (for Phone OTP)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_SERVICE_ACCOUNT_PATH=app/firebase-credentials.json

# Firebase Service Account Credentials (as environment variables)
# Copy these from your Firebase service account JSON file
FIREBASE_TYPE=service_account
FIREBASE_PROJECT_ID_ENV=your-project-id
FIREBASE_PRIVATE_KEY_ID=abcdef1234567890abcdef1234567890abcdef12
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=123456789012345678901
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-xxxxx%40your-project-id.iam.gserviceaccount.com

# Google OAuth (for Social Login)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# JWT Authentication
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

#api token
API_TOKEN=

#firebase
FIREBASE_SERVICE_ACCOUNT_PATH=/app/firebase-credentials.json
